<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="2">


    <TextView
        android:id="@+id/KK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/KK"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PartsOfSpeech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/PartsOfSpeech"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/VOC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/VOC"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/VOC_CN_Explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/VOC_CN_Explanation"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/VOC_EG_Explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/VOC_EG_Explanation"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>